  <h1>üé¨ Video Idee Generator</h1>
  <p>Typ een idee of sfeer (bijv. "mysterieuze sci-fi kortfilm met plottwist") en klik op de knop.</p>
  <input type="text" id="userInput" placeholder="Bijv. horrorfilm in de ruimte met tijdlus">
  <button onclick="generateIdea()">Genereer Idee</button>
  <div id="result"></div>

  <script>
    async function generateIdea() {
      const userInput = document.getElementById("userInput").value;
      const resultBox = document.getElementById("result");
      resultBox.innerText = "AI denkt na...";

      const response = await fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer VUL_HIER_JOUW_API_SLEUTEL_IN" // ‚Üê hier komt jouw echte sleutel
        },
        body: JSON.stringify({
          model: "gpt-4",
          messages: [{
            role: "user",
            content: `Je bent een creatieve scriptwriter. Bedenk een origineel video-idee op basis van dit concept: ${userInput}`
          }],
          temperature: 0.9
        })
      });

      const data = await response.json();
      const idee = data.choices?.[0]?.message?.content || "Er ging iets mis üòÖ";
      resultBox.innerText = idee;
    }
  </script>
